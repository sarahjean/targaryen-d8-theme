<div{{ attributes.setAttribute('id', 'page') }}>

    <!-- ______________________ HEADER _______________________ -->

    <header id="header">
        <div class="mq_targaryen">

            <!-- passing vars -->
            {% if page.targaryen %}
                {{ page.targaryen }}
            {% endif %}

            {% if logo %}
                <a href="{{ front_page }}" title="{{ 'Home'|t }}" rel="home" id="logo">
                    <img src="/themes/targaryen/logo.png" alt="{{ 'Home'|t }}"/>
                </a>
            {% endif %}

            {% if page.header %}
                <div id="header-region">
                    {{ page.header }}
                </div>
            {% endif %}
        </div>
    </header>
    <!-- /header -->

    {% if main_menu or secondary_menu %}
        <nav id="navigation" class="menu{% if main_menu %} with-primary{% endif %}
        {% if secondary_menu %} with-secondary{% endif %}">
            {{ main_menu }}
            {{ secondary_menu }}
        </nav> <!-- /navigation -->
    {% endif %}

    <!-- ______________________ MAIN _______________________ -->

    <div id="main" class="clearfix">
        <div class="mq_targaryen">

            {% if page.sidebar_first %}
                <aside id="sidebar-first" class="sidebar-first sidebars">
                    {{ page.sidebar_first }}
                </aside>
            {% endif %} <!-- /sidebar-first -->

            <section id="content">

                {% if breadcrumb or title or messages or tabs or action_links %}
                    <div id="content-header">

                        {{ breadcrumb }}

                        {% if page.highlighted %}
                            <div id="highlighted">{{ page.highlighted }}</div>
                        {% endif %}

                        {{ title_prefix }}

                        {% if title %}
                            <h1 class="title">{{ title }}</h1>
                        {% endif %}

                        {{ title_suffix }}
                        {{ messages }}
                        {{ page.help }}

                        {% if tabs %}
                            <div class="tabs">{{ tabs }}</div>
                        {% endif %}

                        {% if action_links %}
                            <ul class="action-links">{{ action_links }}</ul>
                        {% endif %}

                    </div> <!-- /#content-header -->
                {% endif %}

                <div id="content-area">
                    {{ page.content }}
                </div>

                {{ feed_icons }}

            </section>
            <!-- /content-inner /content -->

            {% if page.sidebar_last %}
                <aside id="sidebar-last" class="sidebar-last sidebars">
                    {{ page.sidebar_last }}
                </aside>
            {% endif %} <!-- /sidebar-first -->


        </div>
        <!-- /mq_targaryen -->
    </div>
    <!-- /main -->

    <!-- ______________________ FOOTER _______________________ -->

    {% if page.footer %}
        <footer id="footer">
            <div class="mq_targaryen">
                {{ page.footer }}
            </div>
        </footer> <!-- /footer -->
    {% endif %}

</div> <!-- /page -->
